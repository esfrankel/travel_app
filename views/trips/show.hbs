<div class="row justify-content-center">
  <h2>My Trip: {{trip.name}}</h2>
</div>

<div class="section allevents">
  <h3><a href="/trips/{{trip.id}}/events/new" class="btn btn-default addevent">
    Add a new event!
  </a></h3>

  <p>
    Total cost: 
  </p>

  <div class="events-body">
    {{#each events as |event|}}
    <div class="content events summary">
      <h3 class="event-name">{{event.name}}</h3>
      <div class="event-stuff">
        <p class="eventstuff event-date">Date: {{event.date}}</p>
        <p class="eventstuff event-time">Time: {{event.time}}</p>
        <p class="eventstuff event-price">Price: {{event.price}}</p>
      </div>
      <form class="form" method="POST" action="/events?_method=DELETE">
        <input style="visibility: hidden; margin:-90px;" name="delete_id" value="{{this._id}}" >
        <button class="btn" id="trash" Onclick="return confirm('Are you sure you want to delete this event?');"><i class="fa fa-trash"></i> </button>
      </form>
    </div>
    {{/each}}
  </div>

</div>

<script>
function eventGet(){
  const events = document.querySelectorAll('.event-name');

  for(let i = 0; i < events.length; i++){
    lengthCheck(events[i])
  }

};

function lengthCheck(obj){
  const $numWords = obj.textContent.length

  if (($numWords >= 1) && ($numWords < 10)) {
    obj.style.fontSize = "40px"
  }
  else if (($numWords >= 10) && ($numWords < 20)) {
    obj.style.fontSize = "32px"
  }
  else if (($numWords >= 20) && ($numWords < 30)) {
    obj.style.fontSize = "22px"
  }
  else if (($numWords >= 30) && ($numWords < 70)) {
    obj.style.fontSize = "17px"
  }
  else {
    obj.style.fontSize = "10px"
  }
}

eventGet();
</script>
