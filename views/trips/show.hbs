<div class="row justify-content-center">
  <h1>{{trip.name}}</h1>
</div>
<div class="row justify-content-center">
  <h2>{{trip.desc}}</h2>
</div>
<div class="row justify-content-center">
  <h3>Add a new event <a href="/trips/{{trip.id}}/events/new">here</a>.</h3>
</div>

<div class="row justify-content-center">
  <div class="col-8">
    {{#each events as |event|}}
      <div class="card mb-3">
        <div class="card-body">
          <h3 class="card-title text-center">{{event.name}}</h3>
          <p>{{event.desc}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>
