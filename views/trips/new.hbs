<form action="/trips" method="post">

  <div class="container-fluid">
    <div class="new-trip-content section trip-header">
      <h2 class="login-label">New Trip</h2>

      <div class="form-group">
        <label for="trip-title" id="trip-title">Trip Name</label>
        <input type="text" name="name" class="form-control" placeholder="e.g. Japan" required minlength="1" maxlength="45" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="trip-share" id="trip-share">I'd like to share this trip with...</label>
        <input type="text" name="share" class="form-control" placeholder="anna@gmail.com, alfred@gmail.com..." autocomplete="off"> 
      </div>

      <div class="text-center">
        <button type="submit" class="btn submit-button btn-primary">Create</button>
      </div>
    </div>
  </div>

</form>
