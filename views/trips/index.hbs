<h1> My Trips </h1>

<a href="/trips/new">Create a new trip!</a>

<div class="trips-body">
  {{#each trips}}
      <div class="col-12 col-md-6 col-lg-4">
          <div class="trips summary">
              <div class="card-header text-muted">
                  THIS IS A TRIP
              </div>
              <div class="card-body">
                  <h1 class="card-title">{{this.name}}</h1>
                  <p class="card-text">Description: {{this.desc}}</p>
                  <p class="card-text">{{this.events}}</p>
                  <a class="card-link" href="/trips/{{this._id}}">Read More</a>
              </div>
          </div>
      </div>
  {{/each}}


</div>
