<div class="container">
  <div class="row align-items-center justify-content-center ">
    <div class = "col-12 col-md-8 col-lg-4">
      <form action="/users" method="post">
        <h2 class="login-label">Sign up</h2>
        <div class="form-group">
        <label for="user-username" id="user-username">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username" style="margin-bottom: 10px">

        <label for="user-password" id="user-password">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password">
        </div>

        <div class="text-center">
          <button type="submit" class="btn submit-button btn-primary">Create a new account</button>
        </div>
      </form>
    </div>
  </div>
</div>
