<div class="container">
  <div class="row align-items-center justify-content-center ">
    <div class = "col-12 col-md-8 col-lg-4">
      <form action="/trips/{{trip.id}}/events" method="post">

        <h2 class="login-label">New Event</h2>

        <div class="form-group">
          <label for="event-title" class="newevent">Event Name</label>
          <input type="text" name="name" class="form-control" id="event-title" placeholder="e.g. Eiffel Tower">
        </div>

        <div class="form-group">
          <label for="event-desc" class="newevent">Description</label>
          <input type="text" name="desc" class="form-control" id="event-desc">
        </div>

        <div class="form-group">
          <label for="event-date" class="newevent">Date</label>
          <input type="text" name="date" class="form-control" id="event-date">
        </div>

        <div class="form-group">
          <label for="event-time" class="newevent">Time</label>
          <input type="text" name="time" class="form-control" id="event-time">
        </div>

        <div class="form-group">
          <label for="event-location" class="newevent">Location</label>
          <input type="text" name="loc" class="form-control" id="event-location">
        </div>

        <div class="form-group">
          <label for="event-price" class="newevent">Price</label>
          <input type="text" name="price" class="form-control" id="event-price">
        </div>

        <div class="text-center">
          <button type="submit" class="btn submit-button btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
